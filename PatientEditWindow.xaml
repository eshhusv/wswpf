                    <RowDefinition Height="0.25*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Label Content="Анамнес" FontSize="24"/>
                <TextBox Grid.Row="1" Margin="5"/>
                <Label Grid.Row="2" Content="Диагноз" FontSize="24"/>
                <TextBox Grid.Row="3" Margin="5"/>
                <Label Grid.Row="4" Content="Формирование направления" FontSize="24"/>
                <TextBox Grid.Row="5" Margin="5"/>

                <Label Grid.Column="2" Content="Исследования" FontSize="24"/>
                <TextBox Grid.Column="2" Grid.Row="1" Margin="5"/>
                <Label Grid.Column="2" Grid.Row="2" Content="Процедуры" FontSize="24"/>
                <TextBox Grid.Column="2" Grid.Row="3" Margin="5"/>
                <Label Grid.Column="2" Grid.Row="4" Content="Описание симптоматики" FontSize="24"/>
                <TextBox Grid.Column="2" Grid.Row="5" Margin="5"/>

            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <ListView MouseDoubleClick="ListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название"/>
                            <GridViewColumn Header="Дозировка"/>
                            <GridViewColumn Header="Формат приёма"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="Рекомендации" FontSize="24" VerticalAlignment="Bottom"/>
                    <TextBox Grid.Row="1" FontSize="24" Margin="5"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="0.05*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button x:Name="AddRecipe" Content="Добавить препорат" FontSize="24" Margin="15" Click="AddRecipe_Click" />
                    <Button x:Name="SaveReception" Grid.Row="2" Content="Сохранить" FontSize="24" Margin="15" Click="SaveReception_Click" />
                </Grid>
            </Grid>
